<!DOCTYPE html>
<html lang="en">

<head>
    <% include shared/header.ejs %>
</head>

<body class="fixed-header">
<!-- header -->
<% include shared/nav.ejs %>
<!-- /header -->
<!-- /header -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <% if (data.length !== 0) { %>
                <% for (var i in data) { %>

                <div class="card">
                    <div class="card-header" role="tab" id="heading-<%- i %>">
                        <h5>
                            <a data-toggle="collapse" href="#collapse-<%- i %>" aria-expanded="true"
                               aria-controls="collapse-<%- i %>">
                                Canal <%- i %> - <%- data[i].length %> <%- __('ONLINE') %>
                            </a>
                        </h5>
                    </div>
                    <div id="collapse-<%- i %>" class="collapse show" role="tabpanel" aria-labelledby="heading-<%- i %>"
                         data-parent="#accordion">
                        <div class="card-body">
                            <table class="table table-hover table-striped">
                                <thead>
                                <tr>
                                    <th>Pseudo</th>
                                    <th>Niveau</th>
                                    <th>Classe</th>
                                </tr>
                                </thead>
                                <tbody id="ranking-body">
                                <% for (var player of data[i]) { %>
                                <tr>
                                    <td> <%- player.Name %></td>
                                    <td> <%- player.Level %></td>
                                    <td> <%- __(player.Class) %></td>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% } %>
                <% } %>
            </div>
        </div>
    </div>
</section>
<!-- /main -->
<!-- footer -->
<% include shared/footer.ejs %>
<!-- /footer -->

<!-- vendor js -->
<script src="/assets/plugins/jquery/jquery-3.2.1.min.js"></script>
<script src="/assets/plugins/popper/popper.min.js"></script>
<script src="/assets/plugins/bootstrap/js/bootstrap.min.js"></script>


<!-- theme js -->
<script src="/assets/js/theme.min.js"></script>
</body>

</html>