<!DOCTYPE html>
<html>

<head>
    <% include ../shared/head.ejs %>
        <script src="https://www.paypalobjects.com/api/checkout.js"></script>
</head>

<body class="fixed-header menu-pin">
    <% include ../shared/sidepanel.ejs %>
        <!-- START PAGE-CONTAINER -->
        <div class="page-container">
            <% include ../shared/header.ejs %>
                <!-- START PAGE CONTENT WRAPPER -->
                <div class="page-content-wrapper">
                    <!-- START PAGE CONTENT -->
                    <div class="content">
                        <!-- START CONTAINER FLUID -->
                        <div class=" container-fluid   container-fixed-lg">
                            <o class="breadcrumb"></o>
                            <!-- BEGIN PlACE PAGE CONTENT HERE -->
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="card card-default">
                                        <div class="card-header">
                                            <div class="card-title"></div>
                                            <div class="card-controls">
                                            </div>
                                        </div>
                                        <div class="card-block">
                                            <div>
                                                <div class="form-group">
                                                    <label>Donation amount fdp</label>
                                                    <input class="form-control" placeholder="1337,00 €" type="number" id="paypal-input" v-min="0">
                                                </div>
                                                <div id="paypal-button"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END PLACE PAGE CONTENT HERE -->
                        </div>
                        <!-- END CONTAINER FLUID -->
                    </div>
                    <!-- END PAGE CONTENT -->
                    <% include ../shared/copyright.ejs %>
                </div>
                <!-- END PAGE CONTENT WRAPPER -->
        </div>
        <!-- END PAGE CONTAINER -->
        <% include ../shared/javascript.ejs %>
</body>
<script>
    paypal.Button.render({

        env: 'sandbox', // sandbox | production

        client: {
            sandbox: 'AS5FvHHjWVDoNs7KIrUDqfLMzm4-FDSAEIIazVx2RhTJsHghf_nD9qkkSNDHKpIgic-LGyjY8BhhUpob',
            production: ''
        },

        style: {
            label: 'paypal',
            size: 'responsive',
            shape: 'rect',
            color: 'blue',
            tagline: false
        },

        commit: true,

        // payment() is called when the button is clicked
        payment: function (data, actions) {

            // Make a call to the REST api to create the payment
            return actions.payment.create({
                payment: {
                    transactions: [{
                        amount: {
                            total: $("#paypal-input").val(),
                            currency: 'EUR'
                        }
                    }]
                }
            });
        },
        OnCancel: function(data, actions) {
            windows.alert("Eh frère t'as pas payé");
        },
        OnError: function(data, actions) {
            windows.alert("Eh frère y'a eu une erreur");
        }

        // onAuthorize() is called when the buyer approves the payment
        onAuthorize: function (data, actions) {
            // Make a call to the REST api to execute the payment
            return actions.payment.execute().then(function () {
                $.ajax(
                {
                    type: 'POST',
                    dataType: 'json',
                    url: '<%- paypal_callback %>',
                    data: {
                        paymentId: data.paymentID,
                    },
                    error: function () {
                        window.alert('lalala');
                    },
                    success: function () {
                        window.alert('OK');
                    }
                });
            });
        }

    }, '#paypal-button');
</script>

</html>