<!DOCTYPE html>
<html>

<head>
    <% include ../shared/head.ejs %>
</head>

<body class="fixed-header menu-pin">
<% include ../shared/sidepanel.ejs %>
<!-- START PAGE-CONTAINER -->
<div class="page-container">
    <% include ../shared/header.ejs %>
    <!-- START PAGE CONTENT WRAPPER -->
    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START CONTAINER FLUID -->
            <div class=" container-fluid   container-fixed-lg">
                <o class="breadcrumb"></o>
                <!-- BEGIN PlACE PAGE CONTENT HERE -->
                <div class="row">
                    <%
                    for (const char of locals.user.characters)
                    {
                    %>
                    <div class="col-lg-4">
                        <div class="card card-default">
                            <div class="card-header">
                                <div class="card-title">
                                    <%= char.name %>
                                </div>
                                <div class="card-controls">
                                    <ul>
                                        <li>
                                            <a data-toggle="close" class="card-close" href="#">
                                                <i class="card-icon card-icon-close"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-block">
                                <p>
                                    <% switch (char.class)
                                    {
                                    case 0:
                                    if (char.sex === 0) { %>
                                    <img src="/assets/img/classes/male_adventurer.png"/>
                                    <% } else { %>
                                    <img src="/assets/img/classes/female_adventurer.png"/>
                                    <% }
                                        break;
                                    case 1:
                                    if (char.sex === 0) { %>
                                    <img src="/assets/img/classes/male_sword.png"/>
                                    <% } else { %>
                                    <img src="/assets/img/classes/female_sword.png"/>
                                    <% }
                                        break;
                                    case 2:
                                    if (char.sex === 0) { %>
                                    <img src="/assets/img/classes/male_bow.png"/>
                                    <% } else { %>
                                    <img src="/assets/img/classes/female_bow.png"/>
                                    <% }
                                        break;
                                    case 3:
                                    if (char.sex === 0) { %>
                                    <img src="/assets/img/classes/male_mage.png"/>
                                    <% } else { %>
                                    <img src="/assets/img/classes/female_mage.png"/>
                                    <% } %>
                                    <% break; %>
                                    <% } %>
                                </p>
                                <p>
                                    <b>CLASSE</b> :
                                    <% switch (char.class)
                                    {
                                    case 0:
                                    if (char.sex === 0) { %>
                                    <%= "Aventurier" %>
                                    <% } else { %>
                                    <%= "Aventurière" %>
                                    <% }
                                        break;
                                    case 1:
                                    if (char.sex === 0) { %>
                                    <%= "Escrimeur" %>
                                    <% } else { %>
                                    <%= "Escrimeuse" %>
                                    <% }
                                        break;
                                    case 2:
                                    if (char.sex === 0) { %>
                                    <%= "Archer" %>
                                    <% } else { %>
                                    <%= "Archère" %>
                                    <% }
                                        break;
                                    case 3:
                                    if (char.sex === 0) { %>
                                    <%= "Sorcier" %>
                                    <% } else { %>
                                    <%= "Sorcière" %>
                                    <% }
                                        break;
                                    } %>
                                </p>
                                <p>
                                    <b>LEVEL</b> :
                                    <%= char.level %>(+<%= char.hero_level %>)</p>
                                <p>
                                    <b>JOB LEVEL</b> :
                                    <%= char.job_level %>
                                </p>
                                <p>
                                    <b>OR </b> :
                                    <%= char.gold %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <%
                    }
                    %>
                </div>
                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->
        <% include ../shared/copyright.ejs %>
    </div>
    <!-- END PAGE CONTENT WRAPPER -->
</div>
<!-- END PAGE CONTAINER -->
<% include ../shared/javascript.ejs %>
</body>

</html>